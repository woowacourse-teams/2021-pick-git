pipeline {
    agent any

    environment {
       INSTANCE_PEM_PATH = credentials('instances-pem-path')
       HOST = credentials('HOST_DEV')
    }

    stages {
        stage('Build') {
            steps {
                echo 'build frontend...'

                dir('./frontend') {
                    sh '''
                        yarn
                        yarn build
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Front has no test code.'
            }
        }

        stage('Deploy') {
            steps {
                dir('./frontend/script') {
                    chmod 755 ./deploy_script.sh
                    ./deploy_script.sh -c ~/.ssh/EC2-DEV-PICK-GIT.pem -h $HOST
                }
            }
        }
    }
}
